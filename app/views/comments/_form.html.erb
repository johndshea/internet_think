<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Post a Comment</h3>
  </div>
  <div class="panel-body">
    <%= form_for [ @curiosity, @comment ] do |f| %>
      <div class="form-horizontal">
        <div class="form-group">
            <%= f.label :author_name, "Your Name", class: 'control-label' %><br/>
            <%= f.text_field :author_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Your Comment", class: 'control-label' %><br/>
          <%= f.text_area :body, class: 'form-control' %>
        </div>
        <div class="actions form-group">
          <%= f.submit 'Submit', class: 'form-control' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
